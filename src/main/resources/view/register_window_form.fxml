      </ImageView>
      <Label layoutX="226.0" layoutY="23.0" text="Register Form" textFill="WHITE">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Label>
      <Label layoutX="228.0" layoutY="84.0" text="User Name" textFill="WHITE">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label layoutX="226.0" layoutY="136.0" text="Password" textFill="WHITE">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <JFXButton fx:id="btnRegister" buttonType="RAISED" layoutX="281.0" layoutY="301.0" onAction="#btnRegisterOnAction" prefHeight="31.0" prefWidth="128.0" style="-fx-background-color: #075b68;" text="Register" textFill="WHITE">
