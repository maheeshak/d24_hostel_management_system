         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <TextField fx:id="txtUserName" focusTraversable="false" layoutX="232.0" layoutY="103.0" onAction="#txtUserNameOnAction" prefHeight="25.0" prefWidth="225.0" promptText="user name" styleClass="txt_border" />
      <PasswordField fx:id="txtPassword" focusTraversable="false" layoutX="232.0" layoutY="155.0" onAction="#txtPasswordOnAction" prefHeight="25.0" prefWidth="225.0" promptText="password" styleClass="txt_border" />
